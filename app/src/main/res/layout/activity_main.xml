<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    tools:context=".MainActivity"> <!-- Màu nền trắng -->

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/logo"/>

    <TextView
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_login"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="234dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="Welcome Nguyen Viet Lam Phong" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_login"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textAlignment="center"
        android:layout_marginBottom="204dp"
        android:text="Do you want to buy or sell?" />

    <LinearLayout
        android:id="@+id/toggleLayout"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_bg"
        android:layout_above="@+id/btn_login"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="150dp"
        android:orientation="horizontal">


        <!-- Nút Số điện thoại -->

        <!-- Nút Email -->
        <Button
            android:id="@+id/btnPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:backgroundTint="@color/white"
            android:text="I want to buy"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btnEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:backgroundTint="#EDEDED"
            android:text="I want to sell"
            android:textColor="@color/black" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/rememberChoiceCheckbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"

        android:layout_marginTop="452dp"
        android:layout_centerHorizontal="true"
        android:text="Remember my choice"
        android:textColor="#000000" />

    <RelativeLayout
        android:id="@+id/btn_login"
        android:padding="50dp"
        android:layout_alignParentBottom="true"
        android:background="#31FF1F"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!-- Nút Đăng nhập -->

        <!-- Nút Đăng ký tài khoản -->

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFFFFF"
            android:text="OK"
            android:textColor="#000000" />


    </RelativeLayout>


</RelativeLayout>
